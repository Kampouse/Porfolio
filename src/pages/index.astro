---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-5xl font-bold">I'm Jean-Philippe Martel </div>
      <div class="text-3xl py-3 font-bold">Software Engineer</div>
      <div class="py-2">
        <text class="text-lg">
          I'm a software engineer and entrepreneur from Quebec city , Canada. I'm passionate about building great software and helping others do the same. I'm currently working on a few projects, I'm  big fan of new technologies and I'm always looking for new  imporvements to make my life easier.
          </text
        >
      </div>
      <div class="mt-8">
        <a class="btn" href="https://www.linkedin.com/in/jemartel/" target="_blank"> Let's connect!</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">my Latest project(s)</div>
    </div>

    <HorizontalCard
      title="Transcendence"
      img="/post_img.webp"
      desc="Final project for the 42 school; full stack web application that lets you play with other people  in real time to pong Made with React, Node.js, Express, Socket.io, and PostgreSQL. and of course of Typescript."
      url="https://github.com/Kampouse/trans-pong/"
      showcase="httpss://youtu.be/4Z4Y4Z4Y4Z4"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Webserver"
    img="/post_img.webp"
    desc="ever wonder how  http request are  processed? well this project is a simple implementation of  a webserver in C++(98)"
    url="https://github.com/Kampouse/webserv/"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Cube3D"
    img="/post_img.webp"
    desc=" A simple raycaster  made with C and the MLX42 library; tlrd:2d map to 3d view."
    url="https://github.com/Kampouse/cube3d-42-school/"
  />
    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
